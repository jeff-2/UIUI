<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center" >

		<TextView
			android:id="@+id/act_graph_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="--restaurant name--"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
			android:id="@+id/act_graph_location"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="---restaurant location---"
			android:textAppearance="?android:attr/textAppearanceSmall" />
		
	</LinearLayout>
	
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3" >
		
		<edu.illinois.engr.web.cs465uiui.ui.CrowdGraph
			android:id="@+id/act_graph_graph"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4" />
			
		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/act_graph_focuslevel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="-focus-"
				android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView
				android:id="@+id/act_graph_focustime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="-focus-"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<TextView
				android:id="@+id/act_graph_focusexplanation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="---focus explanation of crowd level---"
				android:textAppearance="?android:attr/textAppearanceSmall" />
			
		</LinearLayout>
		
	</LinearLayout>
	
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		
		<ImageButton
			android:id="@+id/act_graph_zoom_in"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_search" />
		
		<ImageButton
			android:id="@+id/act_graph_zoom_out"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_undo" />
		
		<ImageButton
			android:id="@+id/act_graph_zoom_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_back" />
		
		<ImageButton
			android:id="@+id/act_graph_zoom_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_action_forward" />
		
	</LinearLayout>
	
	
	<LinearLayout
		android:id="@+id/act_graph_navbar"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="horizontal" >
		
	</LinearLayout>

</LinearLayout>