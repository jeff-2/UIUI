<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
	<!-- time -->
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    	
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical"
        	android:paddingRight="@dimen/label_hsep"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:text="Time:" />
        
        <TextView android:id="@+id/act_query_time"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:text="--time--" />
        
        <ImageButton
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/ic_action_edit"
        	android:onClick="handleEditTime" />
        
    </LinearLayout>
	
    
    <!-- tags -->
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:text="Tags:" />

    </LinearLayout>
	
    
    <!-- location (distance and center) -->
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Within"
        	android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText android:id="@+id/act_query_distance"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:ems="3"
        	android:inputType="number" />

        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:paddingRight="@dimen/label_hsep"
        	android:text="miles of" />
        
        <TextView android:id="@+id/act_query_position"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:text="---position---" />

    </LinearLayout>
	
    
    <Button
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal"
    	android:text="Compare" />

</LinearLayout>
